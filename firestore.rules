rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - users can only read/write their own data
    match /users/{userId} {
      // Allow user to read their own profile
      allow read: if isOwner(userId);

      // Allow user to create their profile on signup
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Allow user to update their own profile
      allow update: if isOwner(userId);

      // Prevent deletion (optional - remove if you want users to delete accounts)
      allow delete: if false;
    }

    // Workouts collection - users can only access their own workouts
    match /workouts/{workoutId} {
      allow read, write: if isAuthenticated() &&
                           resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
    }

    // Habits collection - users can only access their own habits
    match /habits/{habitId} {
      allow read, write: if isAuthenticated() &&
                           resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
    }

    // Progress collection - users can only access their own progress
    match /progress/{progressId} {
      allow read, write: if isAuthenticated() &&
                           resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
